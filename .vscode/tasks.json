{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\" && cmake -G Ninja -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -S . -B build",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build LemonEngine",
            "type": "shell",
            "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\" && cmake --build build",
            "dependsOn": ["Configure CMake"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                },
                "env": {
                    "CLCACHE_DIR": "${workspaceFolder}/.cache",
                    "CLCACHE_COMPRESS": "true",
                    "CLCACHE_MAXSIZE": "10G"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}